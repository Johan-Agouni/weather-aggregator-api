{
  "name": "weather-aggregator-api",
  "version": "1.0.0",
  "description": "Terminal-style weather aggregator combining real-time weather data, UV index, and air quality metrics from multiple APIs",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\""
  },
  "keywords": [
    "weather",
    "api",
    "aggregator",
    "uv-index",
    "air-quality",
    "terminal",
    "nodejs",
    "express",
    "security"
  ],
  "author": "Johan Agouni",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Johan-Agouni/weather-aggregator-api"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.8.0",
    "supertest": "^7.2.2"
  }
}
