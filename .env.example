# ================================
# SERVER CONFIGURATION
# ================================
PORT=3000
NODE_ENV=development

# ================================
# API URLS
# ================================
OPEN_METEO_URL=https://api.open-meteo.com/v1/forecast
AIR_QUALITY_URL=https://air-quality-api.open-meteo.com/v1/air-quality
UV_INDEX_URL=https://currentuvindex.com/api/v1/uvi
NOMINATIM_URL=https://nominatim.openstreetmap.org

# ================================
# CACHE CONFIGURATION (in seconds)
# ================================
CACHE_TTL=300
# 300 seconds = 5 minutes

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
# 900000 ms = 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
# Max 100 requests per 15 minutes

# ================================
# REQUEST TIMEOUT (in milliseconds)
# ================================
API_TIMEOUT=5000
# 5000 ms = 5 seconds

# ================================
# SECURITY CONFIGURATION
# ================================

# CORS Configuration
CORS_ORIGIN=*
# Use '*' for development, specify domains for production (e.g., https://yourdomain.com)

# IP Ban System
IP_BAN_THRESHOLD=80
# Threat score threshold for automatic IP ban (0-100)

IP_BAN_DURATION=3600000
# Ban duration in milliseconds (3600000 = 1 hour)

# Whitelist IPs (comma-separated)
WHITELISTED_IPS=127.0.0.1,::1
# Example: 127.0.0.1,::1,192.168.1.100

# ================================
# LOGGING CONFIGURATION
# ================================

# Log Level (error, warn, info, http, debug)
LOG_LEVEL=info

# Max log file size (in MB)
LOG_MAX_SIZE=20

# Max log file retention (in days)
LOG_MAX_FILES=14

# ================================
# SECURITY DASHBOARD
# ================================

# Dashboard authentication (recommended for production)
DASHBOARD_ENABLED=true
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=changeme123!
# IMPORTANT: Change these credentials in production!

# ================================
# MONITORING & ALERTS
# ================================

# Discord webhook for security alerts (optional)
DISCORD_WEBHOOK_URL=

# Email alerts (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=

# ================================
# NOTES
# ================================
# 1. Copy this file to .env and configure your settings
# 2. Never commit .env file to version control
# 3. Change default passwords in production
# 4. Enable HTTPS in production
# 5. Configure proper CORS origins in production
# 6. Review security settings regularly
